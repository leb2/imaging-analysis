<div id="submit-job">
  <div class="color-background"></div>

  <div class="relative-container">
    <div class="container-inner">
      {{> navbar }}
      <div class="card">
        <div class="card-header">
          Submit a job
        </div>


        <div class="card-content">

          <div class="select-script section">
            <button class="back hidden">
              Back
            </button>
            <div class="current-path-container hidden">
              <div class="path-bar">
                <span class="current-path"></span>
              </div>
            </div>
            <div class="selected-path-container">
              <span class="selected-label">Select a Script: </span>
              <span class="selected-path"></span>
            </div>
            <div>
              <div class="files-container">
              </div>
            </div>
          </div>

          <div>
            Choose a target path:
            <input type="text" id="target-path"/>
          </div>

          <button id="submit">
            Submit job
          </button>

          <br/>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="js/submit-job.js"></script>
